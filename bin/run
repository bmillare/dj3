#!/bin/sh
DJP_URL='https://utz.icm.jhu.edu/~bmillar1/dj.project-1.0.1-standalone.jar'
CLJ_URL='http://repo1.maven.org/maven2/org/clojure/clojure/1.9.0/clojure-1.9.0.jar'
SPEC_URL='http://repo1.maven.org/maven2/org/clojure/spec.alpha/0.1.143/spec.alpha-0.1.143.jar'
CSPEC_URL='http://repo1.maven.org/maven2/org/clojure/core.specs.alpha/0.1.24/core.specs.alpha-0.1.24.jar'
if [ ! -d "$HOME/.dj" ]; then
git --version 2>&1 > /dev/null
GIT_IS_AVAILABLE=$?
if [ $GIT_IS_AVAILABLE -eq 0 ]; then
echo "Installing dj3 with git"
cd ~/
git clone https://github.com/bmillare/dj3.git ~/.dj
cd -
else
echo "Installing dj3 from zip"
mkdir -p ~/.dj.tmp
cd ~/.dj.tmp
curl -O https://github.com/bmillare/dj3/archive/master.zip
unzip master.zip
mv dj3-master ~/.dj
cd -
rm -rf ~/.dj.tmp
fi
mkdir -p ~/.dj/jars
cd ~/.dj/jars
curl -Ok $DJP_URL
curl -O $CLJ_URL
curl -O $SPEC_URL
curl -O $CSPEC_URL
cd -
fi
if [ ! -d "$HOME/.dj/jars" ]; then
mkdir -p ~/.dj/jars
cd ~/.dj/jars
curl -Ok $DJP_URL
curl -O $CLJ_URL
curl -O $SPEC_URL
curl -O $CSPEC_URL
cd -
fi    
java -cp $HOME/.dj/src:$HOME/.dj/usr/src:$HOME/.dj/jars/* clojure.main "$@"
